<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textView" />

            <Button
                android:layout_below="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/b1" />

            <Button
                android:layout_toRightOf="@+id/b1"
                android:layout_below="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/b2" />

            <Button
                android:layout_toRightOf="@+id/b2"
                android:layout_below="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/b3" />

            <Button
                android:layout_toRightOf="@+id/b3"
                android:layout_below="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/Clear" />

            <Button
                android:layout_below="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/b4" />

            <Button
                android:layout_toRightOf="@+id/b4"
                android:layout_below="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/b5" />

            <Button
                android:layout_toRightOf="@+id/b5"
                android:layout_below="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/b6" />

            <Button
                android:layout_toRightOf="@+id/b6"
                android:layout_below="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;-"
                android:id="@+id/Prev" />


            <Button
                android:layout_below="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/b7" />

            <Button
                android:layout_toRightOf="@+id/b7"
                android:layout_below="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/b8" />

            <Button
                android:layout_toRightOf="@+id/b8"
                android:layout_below="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/b9" />

            <Button
                android:layout_toRightOf="@+id/b9"
                android:layout_below="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:id="@+id/Percent" />

            <Button
                android:layout_below="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/b0" />

            <Button
                android:layout_below="@+id/b7"
                android:layout_toRightOf="@+id/b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/Dot" />

            <Button
                android:layout_toRightOf="@+id/Dot"
                android:layout_below="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x*x"
                android:id="@+id/Square" />

            <Button
                android:layout_toRightOf="@+id/Square"
                android:layout_below="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sqrt"
                android:id="@+id/Root" />

            <Button
                android:layout_below="@+id/b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+-"
                android:id="@+id/PlusMinus" />

            <Button
                android:layout_below="@+id/b0"
                android:layout_toRightOf="@+id/PlusMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/Score" />

</RelativeLayout>